pipeline {
    agent any
    stages {
        stage('Build stage') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test stage') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver stage') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
